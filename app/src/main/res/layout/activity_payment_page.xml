<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lazeebear.parkhere.PaymentActivity"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:id="@+id/pay_by_paypal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_by_paypal_label"/>
    <Button
        android:id="@+id/pay_by_credit_card_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_by_credit_card_label"/>

</LinearLayout>
